{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest"],
    "strict": true,
    "paths": {
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(tabs)/home.tsx",
    "backend/config/firebase.js"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "__test__/**/*"]
}

